<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/interface_group">
        <ListPreference
            android:defaultValue="1"
            android:key="language"
            android:summary="@string/language_summary"
            android:title="@string/language"></ListPreference>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/downloads">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="update_all_at_once"
            android:summary="@string/update_all_at_once_summary"
            android:title="@string/update_all_at_once" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="downloads_img"
            android:summary="@string/download_images_summary"
            android:title="@string/download_images" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="downloads_on_start"
            android:summary="@string/download_on_start_summary"
            android:title="@string/download_on_start" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/journals_rss_chanel">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="rss_pdf"
            android:summary="@string/rss_pdf_summary"
            android:title="@string/pdf" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="rss_epub"
            android:summary="@string/rss_epub_summary"
            android:title="@string/epub" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="rss_mobi"
            android:summary="@string/rss_mobi_summary"
            android:title="@string/mobi" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="rss_mp3"
            android:summary="@string/rss_mp3_summary"
            android:title="@string/mp3" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="rss_m4b"
            android:summary="@string/rss_aac_summary"
            android:title="@string/aac" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/video_books_brochures">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="site_html"
            android:summary="@string/site_html_summary"
            android:title="@string/site_html" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/management">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="analytics"
            android:summary="@string/reporting_summary"
            android:title="@string/reporting" />
    </PreferenceCategory>

</PreferenceScreen>